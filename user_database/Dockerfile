#UTILIZAMOS LA ULTIMA IMAGEN DE POSTGRES
FROM postgres:latest
#ESTABLECEMOS LAS VARIABLES DE ENTONRO
ENV POSTGRES_USER admin
ENV POSTGRES_PASSWORD 12345
#ESTABLECEMOS EL DIRECTORIO DE TRABAJO
WORKDIR /app
#COPIAMOS LAS INSTRUCCIONES
COPY ./init.sql /docker-entrypoint-initdb.d/
#CAMBIA LOS PERMISOS DE EJECUCIÃ“N 
RUN chmod 755 /docker-entrypoint-initdb.d/init.sql

# docker run --name server_database -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=12345 -d server_database